    </div> <br><br><br><br>

    <center>
        <h2>User Details</h2>
    </center>
    <br>

    <div class="row justify-content-evenly">
        <div class="col-8">
            <table class="table table-stripped table-hover" border="3">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Email</th>
                <th scope="col">City</th>
                <th scope="col">State</th>
                <th scope="col">Password</th>
            </tr>
        </thead>
        <tbody>
           
            {{#each data}}
            <tr>
                <td>{{name}}</td>
                <td>{{email}}</td>
                <td>{{city}}</td>
                <td>{{state}}</td>
                <td>{{password}}</td>

            </tr>
            {{/each}}

        </tbody>
    </table>
        </div>
    </div>

