    <title>User Signup Form</title>
</head>

<body>
    <br><br><br><br>
    <a href="/userLogin">Login</a>

    <h1 style="text-align: center;">User Signup Form</h1>

    <div class="col-6" style="margin: auto;">
        <div class="row-6">
            <form method="post" id="form" name="form">

                <div class="mb-3">
                    <label for="name" class="form-label">User Name</label>
                    <input type="text" class="name form-control" id="name" name="name">
                </div><br>
                
                <div class="mb-3">
                    <label for="email" class="form-label">Email Address</label>
                    <input type="email" class="email form-control" id="email" name="email">
                </div><br>

                <div class="mb-3">
                    <label for="contact" class="form-label">User Contact</label>
                    <input type="number" class="contact form-control" id="contact" name="contact">
                </div><br>

                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" class="password form-control" id="password" name="password">
                </div><br>

                {{!-- <input class="form-check-input" type="hidden" name="temp" id="temp"><br><br>
                <input class="form-check-input" type="hidden" name="temp" id="temp2"><br><br> --}}

                              
                <button type="submit" id="btn" name="btn" class="btn btn-primary">Signup</button>
                <div class="btns"></div>

            </form>
            <br><br>

        </div>
    </div>

   
    
    <script src="/js/bootstrap.js"></script>
    <script src="/js/ajaxcode.js"></script>

</body>

</html>
